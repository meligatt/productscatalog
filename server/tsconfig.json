{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/scripts/**/*",
    "./node_modules/*"
  ],
  "compilerOptions": {
    "jsx": "react",
    "outDir": "dist",
    "lib": [
      "es5",
      "es6",
      "ES2019.Array"
    ],
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "types": ["node", "jest"]
  },
}