{
  "include": [
    "src/**/*",
    "test"
  ],
  "exclude": [
    "src/scripts/**/*",
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "outDir": "dist",
    "lib": [
      "es5",
      "es6",
      "ES2019.Array",
      "dom"
    ],
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "types": ["@types/jest","node"]
  },
}