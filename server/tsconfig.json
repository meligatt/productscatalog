{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/scripts/**/*"
  ],
  "compilerOptions": {
    "jsx": "react",
    "outDir": "dist",
    "lib": [
      "es5",
      "es6",
      "ES2019.Array"
    ],
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "paths": {
      "react": ["node_modules/@types/react"],
      "admin-bro": ["node_modules/admin-bro"],
    },
    "baseUrl": "./server",
    "types": ["node", "jest"]
  },
}